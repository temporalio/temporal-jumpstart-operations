{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "grpc-route": {
        "ClusterId": "temporal-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          { "RequestHeadersCopy": "true" },
          { "ResponseHeadersCopy": "true" },
          { "RequestHeader": "Authorization", "Set": "Bearer mikeTheNewHotness==" }
        ]
      }
    },
    "Clusters": {
      "temporal-cluster": {
        "HttpRequest": {
          "Version": "2.0",
          "VersionPolicy": "RequestVersionExact",
          "RequestBodySize": "-1"
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true,
          "MaxConnectionsPerServer": 1024
        },
        "Destinations": {
          "temporal-server": {
            "Address": "http://localhost:7233"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": false
          },
          "Passive": {
            "Enabled": false
          }
        }
      }
    }
  },
  "Encryption": {
    "DefaultKeyId": "default-key-2024",
    "KeyIdPrefix": "temporal_payload_"
  },
  "TemporalApi": {
    "DescriptorFilePath": "../../../generated/temporal-api.binpb",
    "EncodeSearchAttributes" : false
  },
  "ConnectionStrings": {
    "CosmosDB": "AccountEndpoint=https://your-account.documents.azure.com:443/;AccountKey=your-key;"
  },
  "CosmosDB": {
    "Endpoint": "https://your-account.documents.azure.com:443/",
    "Key": "your-key",
    "DatabaseName": "YarpProxyDB"
  }
}